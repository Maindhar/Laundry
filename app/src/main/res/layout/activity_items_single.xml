<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemsSingleActivity">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/itemssingle_app_bar_layout"/>
    <TextView
        android:layout_below="@+id/itemssingle_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemssingle_details"
        android:textStyle="bold"
        android:textSize="27sp"/>
    <TextView
        android:text=""
        android:textSize="20sp"
        android:id="@+id/itemssingle_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemssingle_details"
        android:textStyle="italic"/>
    <RelativeLayout
        android:layout_below="@+id/itemssingle_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/itemssingle_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modify"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"/>
        <Button
            android:id="@+id/itemssingle_delivered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Delivered"/>
        <Button
            android:text="Update"
            android:layout_marginRight="60dp"
            android:layout_alignParentRight="true"
            android:id="@+id/itemssingle_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>


</RelativeLayout>